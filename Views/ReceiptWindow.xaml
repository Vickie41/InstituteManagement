<Window x:Class="InstituteManagement.Views.ReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment Receipt" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Receipt Header -->
        <Border Grid.Row="0" BorderBrush="#2196F3" BorderThickness="0,0,0,2" Padding="0,0,0,10">
            <StackPanel>
                <TextBlock Text="🏫 Hlaing Tharyar Skills Institute" 
                          FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="PAYMENT RECEIPT" 
                          FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                <TextBlock Text="{Binding ReceiptNumber}" 
                          FontSize="12" HorizontalAlignment="Center" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- Receipt Details -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Date:" FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PaymentDate, StringFormat='{}{0:dd-MMM-yyyy HH:mm}'}" Margin="10,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Student:" FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding StudentName}" Margin="10,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Course:" FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CourseName}" Margin="10,5"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Amount:" FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Amount, StringFormat='{}{0:#,##0} MMK'}" 
                              FontWeight="Bold" Margin="10,5"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Method:" FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding PaymentMethod}" Margin="10,5"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Amount in Words:" FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding AmountInWords}" 
                              TextWrapping="Wrap" Margin="10,5"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Remarks:" FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Remarks}" 
                              TextWrapping="Wrap" Margin="10,5"/>
                </Grid>

                <!-- Signature Area -->
                <Border BorderBrush="#ccc" BorderThickness="0,1,0,0" Margin="0,20,0,0" Padding="0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="_________________________" HorizontalAlignment="Center"/>
                            <TextBlock Text="Student/Parent Signature" HorizontalAlignment="Center" 
                                      FontSize="10" Margin="0,5,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="_________________________" HorizontalAlignment="Center"/>
                            <TextBlock Text="Authorized Signature" HorizontalAlignment="Center" 
                                      FontSize="10" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Print" Click="PrintButton_Click" 
                   Width="80" Height="35" Background="#2196F3" Margin="0,0,10,0"/>
            <Button Content="Close" Click="CloseButton_Click" 
                   Width="80" Height="35" Background="#666"/>
        </StackPanel>
    </Grid>
</Window>
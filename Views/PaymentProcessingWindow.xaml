<Window x:Class="InstituteManagement.Views.PaymentProcessingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Process Payment" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Process Payment" 
                  FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Payment Details -->
        <StackPanel Grid.Row="1">
            <GroupBox Header="Student Information" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="{Binding StudentName}" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding CourseName}" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding BatchTime}" Margin="0,2,0,0" Foreground="#666"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Payment Details" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Fee:" Margin="0,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalFee, StringFormat='{}{0:#,##0} MMK'}" 
                              FontWeight="Bold" Margin="10,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Amount Paid:" Margin="0,5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding AmountPaid}" 
                            Height="30" Margin="10,5" FontSize="14"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Payment Method:" Margin="0,5"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" 
                             ItemsSource="{Binding PaymentMethods}"
                             SelectedItem="{Binding SelectedPaymentMethod}"
                             Height="30" Margin="10,5"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Remarks:" Margin="0,5"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Remarks}" 
                            Height="60" Margin="10,5" TextWrapping="Wrap"
                            AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </GroupBox>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Click="CancelButton_Click" 
                   Width="80" Height="35" Background="#f44336" Margin="0,0,10,0"/>
            <Button Content="Process Payment" Click="ProcessPaymentButton_Click" 
                   Width="120" Height="35" Background="#4CAF50"/>
        </StackPanel>
    </Grid>
</Window>